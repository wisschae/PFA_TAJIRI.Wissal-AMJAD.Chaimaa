import React, { useState, useEffect, useRef } from 'react';
import { useNavigate } from 'react-router-dom';
import Webcam from 'react-webcam';
import toast from 'react-hot-toast';
import { MfaState } from '../types';
import authApi from '../api/authApi';
import { useAuth } from '../context/AuthContext';

/**
 * Page de v√©rification MFA with REAL face recognition
 */
const MfaPage: React.FC = () => {
    const [mfaState, setMfaState] = useState<MfaState | null>(null);
    const [isLoading, setIsLoading] = useState(false);
    const [error, setError] = useState<string | null>(null);
    const [capturedImage, setCapturedImage] = useState<string | null>(null);
    const [showWebcam, setShowWebcam] = useState(true);

    // ‚úÖ OTP states
    const [selectedTab, setSelectedTab] = useState<'FACE' | 'OTP'>('FACE');
    const [otpCode, setOtpCode] = useState('');

    const webcamRef = useRef<Webcam>(null);
    const navigate = useNavigate();
    const { setUser, setToken, logout } = useAuth();

    useEffect(() => {
        // R√©cup√©rer les infos MFA depuis localStorage
        const storedMfa = localStorage.getItem('mfa_state');
        const storedEmail = localStorage.getItem('mfa_email'); // Added to store user email

        if (storedMfa) {
            const parsedMfa = JSON.parse(storedMfa);
            setMfaState({ ...parsedMfa, email: storedEmail || '' });
        } else {
            // Si pas d'infos MFA, retour au login
            navigate('/login');
        }
    }, [navigate]);

    const handleCapture = () => {
        if (webcamRef.current) {
            const imageSrc = webcamRef.current.getScreenshot();
            if (imageSrc) {
                setCapturedImage(imageSrc);
                setShowWebcam(false);
                setError(null);
            } else {
                setError("Impossible de capturer l'image. Veuillez r√©essayer.");
            }
        }
    };

    const handleRetake = () => {
        setCapturedImage(null);
        setShowWebcam(true);
        setError(null);
    };

    const handleVerifyFace = async () => {
        // ‚úÖ Validation avant submit
        if (!capturedImage || !mfaState) {
            const errorMsg = "Veuillez capturer une image de votre visage";
            setError(errorMsg);
            toast.error(errorMsg, { icon: 'üì∏' });
            return;
        }

        setIsLoading(true);
        setError(null);


        try {
            // Get user email from localStorage (set during login)
            const userEmail = localStorage.getItem('mfa_email') || '';

            // Call MFA verification API with face image
            const response = await authApi.verifyMfa({
                sessionId: mfaState.sessionId,
                factorType: 'FACE',
                factorData: userEmail, // User ID/email
                imageBase64: capturedImage
            });

            // ‚úÖ MFA successful
            if (response.token) {
                // ‚ö° CRITIQUE : Stocker le token dans localStorage IMM√âDIATEMENT
                // Ceci est synchrone et garantit que ProtectedRoute le verra
                localStorage.setItem('token', response.token);
                localStorage.removeItem('mfa_state');
                localStorage.removeItem('mfa_email');

                // Store user if provided
                if (response.user) {
                    localStorage.setItem('user', JSON.stringify(response.user));
                }

                // Mettre √† jour le state React (asynchrone)
                setToken(response.token);
                if (response.user) {
                    setUser(response.user);
                }

                // ‚úÖ Toast de succ√®s
                toast.success('Authentification r√©ussie !', {
                    duration: 2000,
                    icon: '‚úÖ',
                });

                // ‚ö° IMPORTANT: Petite attente pour s'assurer que le state est mis √† jour
                // avant de naviguer vers dashboard (√©vite que ProtectedRoute ne redirige)
                setTimeout(() => {
                    navigate('/dashboard');
                }, 100);
            } else {
                setError("V√©rification √©chou√©e. Token non re√ßu.");
                toast.error("V√©rification √©chou√©e");
            }
        } catch (err: any) {
            console.error('Face verification error:', err);

            // ‚úÖ Diff√©rencier erreur MFA (400) vs erreur d'authentification (401/403)
            const status = err.response?.status;

            if (status === 400) {
                // Erreur MFA fonctionnelle (mauvais visage)
                // ‚Üí Rester sur /mfa et afficher le message
                const errorMessage = err.response?.data?.message
                    || err.message
                    || "La v√©rification faciale a √©chou√©. Veuillez r√©essayer.";
                setError(errorMessage);
                toast.error(errorMessage, {
                    duration: 5000,
                    icon: '‚ùå',
                });

                // R√©initialiser l'image captur√©e pour pouvoir recapturer
                setCapturedImage(null);
                setShowWebcam(true);
            } else if (status === 401 || status === 403) {
                // Erreur d'authentification globale (session expir√©e, login invalide)
                // ‚Üí D√©connexion et redirection vers login
                console.warn('Authentication error, logging out');
                toast.error('Session expir√©e, reconnectez-vous', {
                    icon: '‚ö†Ô∏è',
                });
                logout();
                navigate('/login');
            } else if (!err.response) {
                // Erreur r√©seau / serveur down
                const errorMessage = "Service temporairement indisponible. V√©rifiez votre connexion.";
                setError(errorMessage);
                toast.error(errorMessage, {
                    duration: 5000,
                    icon: 'üåê',
                });
            } else {
                // Autre erreur
                const errorMessage = err.response?.data?.message || err.message || "Une erreur est survenue";
                setError(errorMessage);
                toast.error(errorMessage);
            }
        } finally {
            setIsLoading(false);
        }
    };

    // ‚úÖ Handle OTP verification
    const handleVerifyOtp = async () => {
        if (!otpCode || !mfaState) {
            const errorMsg = "Veuillez entrer le code OTP";
            setError(errorMsg);
            toast.error(errorMsg, { icon: 'üî¢' });
            return;
        }

        // Validate OTP format (6 digits)
        if (!/^\d{6}$/.test(otpCode)) {
            const errorMsg = "Le code OTP doit contenir exactement 6 chiffres";
            setError(errorMsg);
            toast.error(errorMsg, { icon: '‚ö†Ô∏è' });
            return;
        }

        setIsLoading(true);
        setError(null);

        try {
            const userEmail = localStorage.getItem('mfa_email') || '';

            // Call MFA verification API with OTP code
            const response = await authApi.verifyMfa({
                sessionId: mfaState.sessionId,
                factorType: 'OTP',
                factorData: userEmail,
                imageBase64: otpCode // OTP code passed via imageBase64 field
            });

            // ‚úÖ MFA successful
            if (response.token) {
                localStorage.setItem('token', response.token);
                localStorage.removeItem('mfa_state');
                localStorage.removeItem('mfa_email');

                if (response.user) {
                    localStorage.setItem('user', JSON.stringify(response.user));
                }

                setToken(response.token);
                if (response.user) {
                    setUser(response.user);
                }

                toast.success('Authentification OTP r√©ussie !', {
                    duration: 2000,
                    icon: '‚úÖ',
                });

                setTimeout(() => {
                    navigate('/dashboard');
                }, 100);
            } else {
                setError("V√©rification √©chou√©e. Token non re√ßu.");
                toast.error("V√©rification √©chou√©e");
            }
        } catch (err: any) {
            console.error('OTP verification error:', err);

            const status = err.response?.status;

            if (status === 400) {
                const errorMessage = err.response?.data?.message
                    || err.message
                    || "Code OTP invalide ou expir√©. Veuillez r√©essayer.";
                setError(errorMessage);
                toast.error(errorMessage, {
                    duration: 5000,
                    icon: '‚ùå',
                });
                // Clear OTP input for retry
                setOtpCode('');
            } else if (status === 401 || status === 403) {
                console.warn('Authentication error, logging out');
                toast.error('Session expir√©e, reconnectez-vous', {
                    icon: '‚ö†Ô∏è',
                });
                logout();
                navigate('/login');
            } else {
                const errorMessage = err.response?.data?.message || err.message || "Une erreur est survenue";
                setError(errorMessage);
                toast.error(errorMessage);
            }
        } finally {
            setIsLoading(false);
        }
    };

    const videoConstraints = {
        width: 640,
        height: 480,
        facingMode: "user"
    };

    if (!mfaState) {
        return null;
    }

    return (
        <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-warning-light to-danger-light">
            <div className="max-w-2xl w-full mx-4">
                <div className="bg-white rounded-2xl shadow-xl p-8">
                    {/* Header */}
                    <div className="text-center mb-6">
                        <div className="inline-block p-3 bg-warning-light rounded-full mb-4">
                            <svg
                                className="w-8 h-8 text-warning"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    strokeLinecap="round"
                                    strokeLinejoin="round"
                                    strokeWidth={2}
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                />
                            </svg>
                        </div>
                        <h1 className="text-2xl font-bold text-gray-900 mb-2">
                            Authentification Biom√©trique Requise
                        </h1>
                        <p className="text-sm text-gray-600">
                            Score de risque d√©tect√© : <strong>{mfaState.riskScore}%</strong>
                        </p>
                    </div>

                    {/* Facteurs requis */}
                    <div className="bg-gray-50 rounded-lg p-4 mb-6">
                        <p className="text-sm font-medium text-gray-700 mb-3">
                            Facteurs d'authentification requis :
                        </p>
                        <div className="space-y-2">
                            {mfaState.requiredFactors.map((factor, index) => (
                                <div
                                    key={index}
                                    className="flex items-center gap-3 text-sm text-gray-700 bg-white p-3 rounded-lg"
                                >
                                    {factor === 'FACE' && (
                                        <>
                                            <span className="text-2xl">üë§</span>
                                            <span>Reconnaissance faciale</span>
                                            <span className="ml-auto text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">
                                                Actif
                                            </span>
                                        </>
                                    )}
                                    {factor === 'OTP' && (
                                        <>
                                            <span className="text-2xl">üì±</span>
                                            <span>Code OTP (One-Time Password)</span>
                                        </>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>

                    {/* ‚úÖ NOUVEAUT√â: Onglets pour choisir FACE ou OTP */}
                    <div className="mb-6">
                        <div className="flex gap-2 border-b border-gray-200">
                            <button
                                onClick={() => setSelectedTab('FACE')}
                                className={`flex-1 py-3 px-4 text-sm font-medium transition-all ${selectedTab === 'FACE'
                                        ? 'border-b-2 border-primary text-primary bg-primary-light'
                                        : 'text-gray-500 hover:text-gray-700'
                                    }`}
                            >
                                <span className="text-xl mr-2">üë§</span>
                                Reconnaissance Faciale
                            </button>
                            <button
                                onClick={() => setSelectedTab('OTP')}
                                className={`flex-1 py-3 px-4 text-sm font-medium transition-all ${selectedTab === 'OTP'
                                        ? 'border-b-2 border-primary text-primary bg-primary-light'
                                        : 'text-gray-500 hover:text-gray-700'
                                    }`}
                            >
                                <span className="text-xl mr-2">üî¢</span>
                                Code OTP
                            </button>
                        </div>
                    </div>

                    {/* ‚úÖ Affichage conditionnel: FACE ou OTP */}
                    {selectedTab === 'OTP' ? (
                        /* ========== MODE OTP ========== */
                        <div className="mb-6">
                            <div className="bg-gray-50 rounded-lg p-6 text-center">
                                <div className="mb-4">
                                    <span className="text-6xl">üì±</span>
                                </div>
                                <h3 className="text-lg font-semibold text-gray-900 mb-2">
                                    Entrez votre code OTP
                                </h3>
                                <p className="text-sm text-gray-600 mb-6">
                                    Ouvrez Google Authenticator et entrez le code √† 6 chiffres
                                </p>

                                <div className="max-w-xs mx-auto">
                                    <input
                                        type="text"
                                        maxLength={6}
                                        value={otpCode}
                                        onChange={(e) => setOtpCode(e.target.value.replace(/\D/g, ''))}
                                        placeholder="000000"
                                        className="w-full text-center text-3xl font-mono tracking-widest px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:ring focus:ring-primary-light"
                                        autoFocus
                                    />
                                    <p className="text-xs text-gray-500 mt-2">
                                        Le code change toutes les 30 secondes
                                    </p>
                                </div>

                                {error && (
                                    <div className="mt-4 p-3 bg-danger-light text-danger rounded-lg text-sm">
                                        {error}
                                    </div>
                                )}

                                <button
                                    onClick={handleVerifyOtp}
                                    disabled={isLoading || otpCode.length !== 6}
                                    className={`mt-6 w-full btn ${isLoading || otpCode.length !== 6
                                            ? 'btn-disabled'
                                            : 'btn-primary'
                                        }`}
                                >
                                    {isLoading ? (
                                        <>
                                            <svg className="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                                                <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            V√©rification...
                                        </>
                                    ) : (
                                        '‚úì V√©rifier le code OTP'
                                    )}
                                </button>
                            </div>
                        </div>
                    ) : (
                        /* ========== MODE FACE (existant) ========== */
                        <>
                            {/* Webcam or Captured Image */}
                            <div className="mb-6">
                                <div className="bg-black rounded-lg overflow-hidden relative">
                                    {showWebcam && !capturedImage ? (
                                        <>
                                            <Webcam
                                                audio={false}
                                                ref={webcamRef}
                                                screenshotFormat="image/jpeg"
                                                videoConstraints={videoConstraints}
                                                className="w-full"
                                            />
                                            <div className="absolute bottom-4 left-1/2 transform -translate-x-1/2">
                                                <button
                                                    onClick={handleCapture}
                                                    className="btn btn-primary"
                                                >
                                                    üì∏ Capturer mon visage
                                                </button>
                                            </div>
                                        </>
                                    ) : capturedImage ? (
                                        <>
                                            <img src={capturedImage} alt="Captured" className="w-full" />
                                            <div className="absolute top-4 right-4">
                                                <span className="bg-green-500 text-white text-xs px-3 py-1 rounded-full">
                                                    ‚úì Image captur√©e
                                                </span>
                                            </div>
                                        </>
                                    ) : (
                                        <div className="aspect-video flex items-center justify-center text-white">
                                            Chargement de la webcam...
                                        </div>
                                    )}
                                </div>

                                {capturedImage && (
                                    <div className="mt-3 flex gap-2">
                                        <button
                                            onClick={handleRetake}
                                            className="btn btn-secondary flex-1"
                                            disabled={isLoading}
                                        >
                                            üîÑ Reprendre une photo
                                        </button>
                                    </div>
                                )}
                            </div>

                            {/* Error Message */}
                            {error && (
                                <div className="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
                                    <p className="text-sm text-red-800">
                                        <strong>Erreur :</strong> {error}
                                    </p>
                                </div>
                            )}

                            {/* Action Buttons */}
                            <div className="space-y-3">
                                <button
                                    onClick={handleVerifyFace}
                                    disabled={isLoading || !capturedImage}
                                    className="btn btn-primary w-full"
                                >
                                    {isLoading ? (
                                        <span className="flex items-center justify-center gap-2">
                                            <svg className="animate-spin h-5 w-5" viewBox="0 0 24 24">
                                                <circle
                                                    className="opacity-25"
                                                    cx="12"
                                                    cy="12"
                                                    r="10"
                                                    stroke="currentColor"
                                                    strokeWidth="4"
                                                    fill="none"
                                                />
                                                <path
                                                    className="opacity-75"
                                                    fill="currentColor"
                                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                                />
                                            </svg>
                                            V√©rification en cours...
                                        </span>
                                    ) : (
                                        '‚úì Valider la v√©rification faciale'
                                    )}
                                </button>

                                <button
                                    onClick={() => navigate('/login')}
                                    className="btn btn-secondary w-full"
                                    disabled={isLoading}
                                >
                                    Annuler
                                </button>
                            </div>

                            {/* Info session */}
                            <div className="mt-6 pt-4 border-t border-gray-200 text-xs text-gray-500">
                                <p>Session ID : {mfaState.sessionId}</p>
                                <p className="mt-1 text-blue-600">
                                    üí° La reconnaissance faciale est maintenant active !
                                </p>
                            </div>
                        </div>
                </div>
            </div>
            );
};

            export default MfaPage;
